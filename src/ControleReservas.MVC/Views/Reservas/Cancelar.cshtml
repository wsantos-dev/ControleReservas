@model ReservaViewModel
@{
    ViewData["Title"] = "Cancelar Reserva";
}
<h2>Cancelar Reserva</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Sala</dt>
        <dd class="col-sm-10">@Model.SalaNome</dd>
        <dt class="col-sm-2">Usuário</dt>
        <dd class="col-sm-10">@Model.UsuarioNome</dd>
        <dt class="col-sm-2">Data de Início</dt>
        <dd class="col-sm-10">@Model.DataHoraInicio.ToString("dd/MM/yyyy HH:mm")</dd>
        <dt class="col-sm-2">Data Final</dt>
        <dd class="col-sm-10">@Model.DataHoraFim.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>
</div>

<form asp-action="Cancelar" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirmar Cancelamento</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>
